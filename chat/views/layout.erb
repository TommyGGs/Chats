    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@500&display=swap" rel="stylesheet">
  </head>
  <body>
<% unless session[:user] %>
 <div class="first"> 
    <h1 class="first-logo"><a class="first-logo-a" href="/">chattou</a></h1>
<% else %>
<!--<div class="container">-->
  <div class="top">
    <div class="menu" onclick="myFunction(this)">
      <div class="menu-bar">
        <div class="bar1"></div>
        <div class="bar2"></div>
        <div class="bar3"></div>
        <div class="links">
          <a class="links-profile" href="/profile/<%= session[:user] %>">My Profile</a>
          <a class="links-friends-page" href="/friends" id="friends_page">friend page</a>
        </div>
      </div>
    </div>
    <h1 class="logo"><a class="logo-a" href="/">chattou</a></h1>
    <% unless Profile.find_by(user_id: session[:user]) %>
      <div class="icon-black"></div>
    <% else %>
      <div class="nav-icon-container">
        <img class="nav-icon-image" 
        src="<%= Profile.find_by(user_id: session[:user]).icon %>">
      </div>
    <% end %>
    <a class="signout-a" href="/signout">logout</a>
  </div>
    <!--<h2>logged in as < % = User.find(session[:user]).name %></h2>-->


<% end %>

    <%= yield %>
    <script>
      if (document.querySelector('.icon-black')) {
        document.querySelector('.icon-black').addEventListener('click', () => {
        window.location.href = "/profile/<%= session[:user] %>";
      })
      }
      if (document.querySelector('.nav-icon-image')) {
        document.querySelector('.nav-icon-image').addEventListener('click', () => {
        window.location.href = "/profile/<%= session[:user] %>";
      })
      }
      function myFunction(x) {
        x.classList.toggle("change");
      }
    </script>
  </body>
</html>